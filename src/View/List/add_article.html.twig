{% extends 'layout.html.twig' %}


{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/items_add.css">
	<link rel="stylesheet" href="/assets/css/navbar.css">
{% endblock %}

{% block navbar %}

	{% include "Components/_navbar.html.twig" %}

{% endblock %}


{% block content %}
	<div class="main-background"></div>
	<div class='page'>
		<div class="add-form" >
				<div class="list-container">
				<h3 class="list-title">Nom de la liste : {{ lists['name'] }}</h3>
				<h3 class="list-date">Date de l'évenement : {{ lists['limit_date'] }}</h3>
				<p class="list-description">
					<strong>{{ lists['description'] }}</strong>
				</p>
				</div>
			<div class="form-container">
				<div class="add_Article">
			    <button class ="add" > Ajouter un cadeau </button>
				</div>
				<form class="form" action="" method="POST">
					<label for="giftName">
						<p class="giftName">Nom du cadeau</p>
					</label>
					<input type="text" id="giftName" placeholder="Entrer le nom du cadeau" name="giftName" required>
					<label for="price">
						<p class="price">Prix</p>
					</label>
					<input type="text" id="price" placeholder="Entrer le prix du cadeau" name="price" required>
					<label for="imgLink">
						<p class="imgLink">Lien de la photo</p>
					</label>
					<input type="text" id="imgLink" placeholder="Coller le lien de la photo" name="imgLink" required>
					<label for="giftLink">
						<p class="giftLink">Lien de l'article</p>
					</label>
					<input type="text" id="giftLink" placeholder="Coller le lien du cadeau" name="giftLink" required>
					<label for="description">
						<p class="description">Description</p>
					</label>
					<textarea class="description_area" id="description" placeholder="Indiquez des information sur votre cadeau" name="description" required></textarea>
					<div>
						<input type="submit" id='submit' value="Ajouter">
					</div>
				</form>
			<div class="list-share-container">
				<div class="article-container">
			{% for article in list %}
                <div class="article">
                    <a href="{{ article.market_link }}" class="article-img"><img class="article-img" alt="{{ article.name }}" src="{{ article.picture }}"/></a>
                    <h4 class="article-title">{{ article.name }}</h4>
                    <h4 class="article-price">{{ article.price }}€</h4>
                    <p class="article-description">{{ article.description }}</p>
					<input class="delete-button" type="submit" name="delete" id="delete" value="Supprimer">
                </div>
            {% endfor %}
				</div>
			</div>
			</div>
		</div>
	</div>
<script src="/assets/javascript/add-article.js"></script>
{% endblock %}

